<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailActivity">


    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#808080"
        android:padding="7dp"
        android:text="A M C . Engineering College"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/linearlist" />

    <LinearLayout
        android:id="@+id/linearlist"
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_marginTop="10dp"
        android:background="#dcdcdc"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeading">

        <TextView
            android:id="@+id/textViewID"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:text="A M C . Engineering College"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="-16dp" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textViewID"
            tools:layout_editor_absoluteX="-16dp" />

        <TextView
            android:id="@+id/textViewCity"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddress"
            tools:layout_editor_absoluteX="-16dp" />

        <TextView
            android:id="@+id/textViewState"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textViewCity"
            tools:layout_editor_absoluteX="-16dp" />

        <TextView
            android:id="@+id/textViewType"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textViewState"
            tools:layout_editor_absoluteX="-16dp" />
        <TextView
            android:id="@+id/textViewStaff"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textViewType"
            tools:layout_editor_absoluteX="-16dp" />
        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textViewStaff"
            tools:layout_editor_absoluteX="-16dp" />
        <TextView
            android:id="@+id/textViewCategory"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textViewTime"
            tools:layout_editor_absoluteX="-16dp" />
        <TextView
            android:id="@+id/textViewShift"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:layout_constraintTop_toBottomOf="@+id/textViewCategory"
            tools:layout_editor_absoluteX="-16dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>