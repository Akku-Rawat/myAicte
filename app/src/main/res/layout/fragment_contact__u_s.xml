<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:backgroundTint="#48d1cc"
    tools:context=".Contact_US">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="#483d8b"
            android:gravity="center"
            android:id="@+id/aaaaaa"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="19dp"
                app:cardElevation="25dp"
                app:cardBackgroundColor="#20b2aa"
                android:layout_gravity="center"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="Contact Us Here"
                    android:textSize="27sp"
                    android:textColor="#ff0000"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="7dp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#48d1cc"
            android:layout_marginTop="10dp"
            >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:columnCount="1"
            android:layout_margin="5dp"
            android:background="@drawable/grid_bg"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="19dp"
            app:cardElevation="25dp"
            app:cardBackgroundColor="#fffafa"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="XYZ@gmail.com"
                android:textSize="27sp"
                android:textColor="@color/teal_700"
                android:autoSizeTextType="uniform"
                android:padding="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:drawableStart="@drawable/email"
                android:drawablePadding="2dp"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="19dp"
                app:cardElevation="25dp"
                app:cardBackgroundColor="#fffafa"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="91197 * * * * * "
                    android:textSize="27sp"
                    android:textColor="@color/teal_700"
                    android:autoSizeTextType="uniform"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableEnd="@mipmap/telephone2_foreground"
                    android:drawablePadding="2dp"

                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="19dp"
                app:cardElevation="25dp"
                app:cardBackgroundColor="#fffafa"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=" @officialAicte"
                    android:textSize="27sp"
                    android:textColor="@color/teal_700"
                    android:autoSizeTextType="uniform"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableStart="@drawable/facebook1"
                    android:drawablePadding="2dp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="19dp"
                app:cardElevation="25dp"
                app:cardBackgroundColor="#fffafa"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=" @officialAicte"
                    android:textSize="27sp"
                    android:textColor="@color/teal_700"
                    android:autoSizeTextType="uniform"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableEnd="@drawable/twitter"
                    android:drawablePadding="2dp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="19dp"
                app:cardElevation="25dp"
                app:cardBackgroundColor="#fffafa"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text=" @officialAicte"
                    android:textSize="27sp"
                    android:textColor="@color/teal_700"
                    android:autoSizeTextType="uniform"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableStart="@drawable/icons8_instagram"
                    android:drawablePadding="2dp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="19dp"
                app:cardElevation="25dp"
                app:cardBackgroundColor="#fffafa"
                android:layout_marginBottom="20dp"
                android:layout_margin="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="123_Ball Park "
                    android:textSize="27sp"
                    android:textColor="@color/teal_700"
                    android:autoSizeTextType="uniform"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:drawableEnd="@mipmap/address_foreground"
                    android:drawablePadding="2dp"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>

        </GridLayout>
        </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>